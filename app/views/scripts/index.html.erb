<h1>Listing scripts</h1>

<table>
  <tr>
    <th>File</th>
    <th>Title</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scripts.each do |script| %>
  <tr>
    <td><%= script.file %></td>
    <td><%= script.title %></td>
    <td><%= script.author_id %></td>
    <td><%= link_to 'Show', script %></td>
    <td><%= link_to 'Edit', edit_script_path(script) %></td>
    <td><%= link_to 'Destroy', script, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

